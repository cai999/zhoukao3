<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <CheckBox
        android:id="@+id/cart_produck_check"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cart_produck_img"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center|left"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/cart_produck_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaaaaaa"
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cart_produck_price"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
       <com.bwie.kangxiaoling.MyAdder
           android:id="@+id/myadder"
           android:layout_width="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_height="wrap_content"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
